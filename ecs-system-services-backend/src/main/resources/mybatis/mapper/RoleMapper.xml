<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zdxf.sysmanage.mapper.RoleMapper">
    <insert id="insertRole">
        insert into user_roles (user_id, role_id) VALUES (#{userId}, #{roleId});
    </insert>


    <select id="findRoleById" resultType="com.zdxf.sysmanage.Role">
        select id, role_name, role_desc from role where id = #{roleId}
    </select>

    <select id="findRoleByUserId" resultType="com.zdxf.sysmanage.Role">
        select * from role where id in (SELECT role_id from user_roles where user_id = #{userId});
    </select>

</mapper>